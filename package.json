{
	"name": "lsp-semantic-language",
	"description": "A language server for VSCode",
	"author": "NothingIsGood",

	"version": "1.0.0",
	"publisher": "NothingIsGood",

	"repository": {
		"type": "git",
		"url": "https://github.com/NothingIsGood/SemanticLanguageServer"
	},
	
	"categories": [],
	"keywords": [
		"multi-root ready"
	],
	"engines": {
		"vscode": "^1.23.0"
	},
	"activationEvents": [
		"onLanguage:semanticlanguage"
	],
	"main": "./client/out/extension",
	"contributes": {
		"commands": {
			"command": "ext.InitProject",
			"title": "SL: Init project in first folder of workspace"
		},
		"configuration": {
			"type": "object",
			"title": "Example configuration",
			"properties": {
				"languageServerExample.maxNumberOfProblems": {
					"scope": "resource",
					"type": "number",
					"default": 100,
					"description": "Controls the maximum number of problems produced by the server."
				},
				"languageServerExample.trace.server": {
					"scope": "window",
					"type": "string",
					"enum": [
						"off",
						"messages",
						"verbose"
					],
					"default": "off",
					"description": "Traces the communication between VS Code and the language server."
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "cd client && npm run update-vscode && cd .. && npm run compile",
		"compile": "tsc -b",
		"watch": "tsc -b -w",
		"postinstall": "cd client && npm install && cd ../server && npm install && cd ..",
		"test": "sh ./scripts/e2e.sh"
	},
	"devDependencies": {
		"@types/mocha": "^5.2.0",
		"@types/node": "^8.0.0",
		"typescript": "^3.1.3"
	},
	"dependencies": {
		"request": "^2.88.0"
	}
}
